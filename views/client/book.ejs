    <BODY>
      <label>Book</label>
      <div>
        <%if( locals.user){%>
            
            <%- include('../partials/logedin_navbar',{user:user,current:'blu'});%>
            
        <%}else {%>
            <%-include('../partials/default_navbar')%>
            
        <%}%>%>
        
