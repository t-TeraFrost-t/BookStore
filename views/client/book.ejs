           <div class="book" id="<%=book.isbn%>">
                <img src="<%=book.cover%>" alt="Italian Trulli" >
                <h1> <%=book.name%> </h1>
                <h2> <%=book.autor%> </h2>
                <%if(book.price_usual===book.price){%>
                  <h2>Price: <%=book.price%> <%=book.currency%></h2>
                  <%}else{%>
                    <h2>Price: <%=book.price%> <%=book.currency%></h2>
                    <h3><s> <%=book.price_usual%> <%=book.currency%> </s> </h3>
                    <%}%>
                <h5> <%=book.gener%></h5>
                <p> <%=book.description%></p>
            </div>
            <button class="add" id="<%=book.id%>">Add to basket</button>
            
            
                
