    <BODY>
      <%- include('../partials/backoffice-navbar',{user:user,current:'curent'});%>
            <p>-</p>
        <label>Add Book</label>
        <form action="/add-book1" method="POST" enctype="multipart/form-data">
          <div>
            
            <label for="isbn">ISBN:</label>
            <input type="text" id="isbn" name="isbn" placeholder="Enter a isbn">
          </div>
          <div>
            <label for="name">Image Link:</label>
            <input type="file" id="cover" name="cover" >
          </div>
          <div>
            
            <label for="name">Name:</label> 
            <input type="text" id="name" name="name" placeholder="Enter a name">
            <label for="autor">Autor:</label>
            <input type="text" id="autor" name="autor" placeholder="Enter a autor">
          </div>
          
          
          <div>
            <label for="price">Enter price:</label>
            <input type="number" step=0.01  id="price" name="price">
            <label for="discount">Enter discount:</label>
            <input type="number" step=0.01  id="discount" name="discount">
          </div>
          <div>  
            <label for="amount">Enter number of books:</label>
            <input type="number"  id="amount" name="amount">
          </div>  
          <div>
              <label for="gener">Gener:</label>
              <select  id="gener" name="gener">
                <option selected value="0">None</option>
                <% geners.forEach((gener)=>{%>
                    <option value="<%=gener.id%>"><%=gener.name%></option>
                <%})%>
              </select>
          </div>
          <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" cols="60" rows="10"></textarea>
          </div>  
            
            <button id="submit">Submit</button>
        </form>
        
